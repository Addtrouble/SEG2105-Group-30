<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/textSelectAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a new avatar"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Grid of flags -->
    <GridLayout
        android:id="@+id/gridAvatars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/textSelectAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <!-- 9 ImageViews â€“ replace drawables with your actual names -->
        <ImageView
            android:id="@+id/avatarFlag1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_australia"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_brazil"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_canada"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_china"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_portugal"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_russia"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_saudi_arabia"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_the_democratic_republic_of_the_congo"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/avatarFlag9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flag_of_the_united_states"
            android:padding="8dp"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>